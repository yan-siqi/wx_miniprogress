/*滑块部分样式*/

.scrollContainer {
  display: flex;
  margin-top: 30rpx;
  height: 300rpx;
  padding: 0 20rpx;
}

.scrollContainer .scrollItem {
  width: 200rpx;
  margin-right: 20rpx;
}

.scrollContainer .scrollItem image {
  display: block;
  width: 200rpx;
  height: 200rpx;
  border-radius: 10rpx;
}

.scrollContainer .scrollItem text {
  display: block;
  font-size: 26rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

/*排行榜*/

.topListSwiper {
  padding: 0 20rpx;
  height: 450rpx;
}
.swiperContent {
  background: #fbfbfb;
  width: 96%;
}
.topListSwiper .swiperContent .title {
  margin-bottom: 20rpx;
}
.topListSwiper .swiperContent .musicContent{
  display: flex;
  /*当盒子加上弹性布局之后,子元素块元素 但是后代元素不受影响*/
  margin-bottom: 10rpx;
}

.musicContent .musicPic {
  width: 100rpx;
  height: 100rpx;
  border-radius: 10rpx;
}
.musicContent .count {
  width: 100rpx;
  text-align: center;
}
.musicContent .musicName{
  font-size: 26rpx
}
