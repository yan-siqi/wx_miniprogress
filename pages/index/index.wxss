/*轮播图部分样式*/

.navSwiper {
  width: 100%;
  height: 300rpx;
}

.navSwiper image {
  width: 100%;
  height: 100%;
}

/*导航区域*/

.navContainer {
  display: flex;
}

.navItem {
  width: 20%;
  flex-direction: column;
  text-align: center;
}

.navItem .iconfont {
  width: 100rpx;
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
  font-size: 50rpx;
  border-radius: 50%;
  display: block;
  background: #df5000;
  margin: 0 auto;
  margin-top: 30rpx;
}

.navItem text {
  font-size: 26rpx;
}

