/* pages/recomendMusic/recomendMusic.wxss */
/* 每日推荐头部 */
.recommendMusicContainer{
  width: 100%;
 position: relative;
}
.recommendMusicContainer .header {
  position: relative;
  width: 100%;
  height: 300rpx;
 
}

.recommendMusicContainer .header image {
  width: 100%;
  height: 100%;
}

.recommendMusicContainer .header .date {
  position: absolute;
  left: 50%;
  top: 50%;
  /* transform: translateY(-50%); */
  width: 200rpx;
  height: 60rpx;
  line-height: 60rpx;
  color: #fff;
  font-size: 30rpx;
  font-weight: bold;
  text-align: center;
  margin-left: -100rpx;
  margin-top: -30rpx;
}
.recommendMusicContainer .header .date .day{
  font-size: 50rpx
}
/* 每日推荐的内容区域 */
.listContent{
 
  background-color: #fff;
  padding: 20rpx;
  border-radius: 30rpx 30rpx 0 0;
  position: absolute;
  left: 0;
  top: 280rpx;
  width: 100%;
  box-sizing: border-box;
}
.listContent .listContentHeader{
  display: flex;
  justify-content: space-between;
  font-size: 26rpx;
}
.listContent .listContentHeader .allPlay{
  font-size: 32rpx;
  font-weight: bold;

}
.listContent .scrollView{
margin: 10rpx 10rpx 0 10rpx;
  height:calc(100vh - 280rpx);
}
.listContent .scrollView .scrollItem{
 
  display: flex;
  flex-direction: row;
  margin-top: 25rpx;
  position: relative
}
.listContent .scrollView .scrollItem image{
  width: 80rpx;
  height: 80rpx;
  border-radius: 8rpx;
}
.listContent .scrollView .scrollItem .musicContent{
  display: flex;
  margin-left: 20rpx;
  flex-direction: column;
}
.listContent .scrollView .scrollItem .musicContent .musicName{
font-size: 28rpx;
}
.listContent .scrollView .scrollItem .musicContent .musicAuhor{
font-size: 22rpx;
color: #333;
}
.listContent .scrollView .scrollItem .musicContent .radio{
position: absolute;
right: 0;
}